        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--fragment_me  item的 宽匹配父窗体高45统一风格-->
    <style name="fragment_textview_Wmatch_45height">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:drawableRight">@mipmap/icon_list_next</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <!--fragment_me header中textview 宽高自适应统一风格-->
    <style name="fragment_textview_Wwrap_Hwrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--个人资料的itemstyle-->
    <style name="activity_person_info" parent="fragment_textview_Wwrap_Hwrap">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!--底部弹出dialog的方式-->
    <style name="Select_dialog" parent="android:style/Theme.Translucent">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--如果 不要 上下滑入式动画  去掉下面这句话-->
        <item name="android:windowAnimationStyle">@style/Select_dialog_windowAnimationStyle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Select_dialog_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="Comm_dialogfragment">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--如果 不要 上下滑入式动画  去掉下面这句话-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@style/Comm_dialogfragment_windowAnimationStyle
        </item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Comm_dialogfragment_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_to_top</item>
