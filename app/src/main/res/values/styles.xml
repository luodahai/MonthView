<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MaterialDesign" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar颜色 -->
        <item name="colorPrimary">@color/color_header</item>
        <!-- toolbar标题文字颜色 仅在Lollipop以上机器生效-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!-- 通知栏底色 -->
        <item name="colorPrimaryDark">@color/color_header</item>
        <!-- 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色 -->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:windowBackground">@color/color_app_bg</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_height">wrap_content</item>-->
        <!--<item name="android:minHeight">?attr/actionBarSize</item>-->
        <item name="android:layout_height">@dimen/app_header_height</item>
        <item name="android:minHeight">@dimen/app_header_height</item>
        <!-- Toolbar背景颜色 -->
        <item name="android:background">?attr/colorPrimary</item>
        <!-- Toolbar popup menu样式 -->
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>

    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/color_header</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="radioButton_main" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/selector_main_radiobutton_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:height">48dp</item>
    </style>

    <color name="color_app_bg">#FFFFFF</color>


    <!--popwindow  从下到上弹出 从上到下 滑出去-->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--popwindow  渐隐渐现出现  消失-->
    <!--popwindow  渐隐渐现出现  消失-->
    <style name="fade_PopupAnimation" parent="PopupAnimation">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--wheelView-->
    <style name="wheelViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">@color/theme</item>
        <item name="bottomLineColor">#f1f1f1</item>
        <item name="lineHeight">1dp</item>
        <item name="firstLineAndSecondLineSpace">10dp</item>
        <item name="maskHight">36dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#999999</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectedTextColor">#666666</item>
        <item name="selectedTextSize">22sp</item>
        <item name="unitHight">50dp</item>
    </style>

    <!--这个中间弹出方式  选择形式是 1.年月日  2.礼拜几 小时  分钟 3.时间段 小时  分钟-->
    <style name="wheelViewStyle_time_picker_for_creat_claz">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">5</item>
        <item name="lineColor">#e1e1e1</item>
        <item name="bottomLineColor">@color/white</item>
        <item name="lineHeight">1px</item>
        <item name="maskHight">40dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#cccccc</item>
        <item name="normalTextSize">12sp</item>
        <item name="selectedTextColor">#333333</item>
        <item name="selectedTextSize">16sp</item>
        <item name="unitHight">50dp</item>
    </style>

    <style name="btn_blue_cor">
        <item name="android:background">@drawable/selector_btn_blue_bg</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
