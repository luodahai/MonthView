<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MaterialDesign" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar颜色 -->
        <!-- <item name="colorPrimary">@color/color_header</item>-->
        <!-- toolbar标题文字颜色 仅在Lollipop以上机器生效-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 通知栏底色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色 -->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:windowBackground">@color/color_app_bg</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="radioButton_main" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/selector_main_radiobutton_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:height">48dp</item>
    </style>

    <color name="color_app_bg">#f1f1f1</color>


    <!--popwindow  从下到上弹出 从上到下 滑出去-->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--popwindow  渐隐渐现出现  消失-->
    <!--popwindow  渐隐渐现出现  消失-->
    <style name="fade_PopupAnimation" parent="PopupAnimation">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--wheelView--><!--<item name="firstLineAndSecondLineSpace">120dp</item>-->
    <style name="wheelViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">5</item>
        <item name="lineColor">#f1f1f1</item>
        <item name="bottomLineColor">#f1f1f1</item>
        <item name="lineHeight">1dp</item>
        <item name="maskHight">36dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#999999</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectedTextColor">#333333</item>
        <item name="selectedTextSize">20sp</item>
        <item name="unitHight">45dp</item>
    </style>

    <!--这个中间弹出方式  选择形式是 1.年月日  2.礼拜几 小时  分钟 3.时间段 小时  分钟-->
    <style name="wheelViewStyle_time_picker_for_creat_claz">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">4</item>
        <item name="lineColor">#e1e1e1</item>
        <item name="bottomLineColor">@color/white</item>
        <item name="lineHeight">1px</item>
        <item name="maskHight">35dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#cccccc</item>
        <item name="normalTextSize">12sp</item>
        <item name="selectedTextColor">#333333</item>
        <item name="selectedTextSize">16sp</item>
        <item name="unitHight">45dp</item>
    </style>

    <style name="btn_blue_cor">
        <item name="android:background">@drawable/selector_btn_blue_bg</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="btn_green_cor">
        <item name="android:background">@drawable/bg_btn_corner</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="edit_white_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--fragment_me  item的 宽匹配父窗体高45统一风格-->
    <style name="fragment_textview_Wmatch_45height">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:drawableRight">@mipmap/icon_list_next</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <!--fragment_me header中textview 宽高自适应统一风格-->
    <style name="fragment_textview_Wwrap_Hwrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--个人资料的itemstyle-->
    <style name="activity_person_info" parent="fragment_textview_Wwrap_Hwrap">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!--底部弹出dialog的方式-->
    <style name="Select_dialog" parent="android:style/Theme.Translucent">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--如果 不要 上下滑入式动画  去掉下面这句话-->
        <item name="android:windowAnimationStyle">@style/Select_dialog_windowAnimationStyle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Select_dialog_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="login_edittext">
        <item name="android:layout_margin">22dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="label_text_color">@color/txt_3</item>
        <item name="label_padding">5dp</item>
    </style>


    <style name="input_linearLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="communication_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">98dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="label_padding">10dp</item>
        <item name="label_text_color">@color/txt_2</item>
    </style>

    <style name="communication_textview" parent="communication_edittext">
        <item name="android:drawableRight">@mipmap/icon_list_next</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
