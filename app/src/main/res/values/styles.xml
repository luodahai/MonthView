<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="radio_button">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radio_button_circle_blue</item>
        <item name="android:textColor">@color/calendar_radio_brn_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Comm_dialogfragment_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_to_top</item>
    </style>

    <!--底部弹出dialog的方式-->
    <style name="Select_dialog" parent="android:style/Theme.Translucent">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--如果 不要 上下滑入式动画  去掉下面这句话-->
        <item name="android:windowAnimationStyle">@style/Select_dialog_windowAnimationStyle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Select_dialog_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>
