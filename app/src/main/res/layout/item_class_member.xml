<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/touch_bg"
    android:padding="10dp">

    <com.ishow.ischool.widget.custom.AvatarImageView
        android:id="@+id/avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        app:text_color="@color/white" />

    <TextView
        android:id="@+id/name"
        style="@style/name_font_style"
        android:layout_toRightOf="@id/avatar"
        android:maxLines="1"
        android:maxWidth="200dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/name"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/state"
            style="@style/small_font_style"
            android:textColor="@color/comm_blue"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/sp10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/teacher_tv"
            style="@style/normal_font_style"
            android:layout_marginRight="10dp"
            android:maxLength="7" />

        <TextView
            android:id="@+id/kegu_tv"
            style="@style/normal_font_style"
            android:maxLength="7" />

    </LinearLayout>

    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@mipmap/icon_student_tel" />

</RelativeLayout>