            <com.commonlib.widget.TopBottomTextView
                android:id="@+id/sales_table1"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                app:label_left_padding="10"
                android:layout_marginTop="15dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                app:label_TB_padding="5"
                app:label_text_bottom="晨读讲师"
                app:label_text_bottom_color="@color/txt_9"
                app:label_text_bottom_size="12"
