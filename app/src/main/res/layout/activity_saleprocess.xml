<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/widget_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:layout_marginBottom="15dp">

                <com.ishow.ischool.widget.custom.CircleImageView
                    android:id="@+id/sales_avart"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/img_header_default"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/sales_job"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:label_left_padding="10"
                    app:label_TB_padding="6"
                    app:label_text_bottom="晨读讲师"
                    app:label_text_bottom_color="@color/txt_9"
                    app:label_text_bottom_size="12"
                    app:label_text_top_str="哈哈哈"
                    app:label_text_top_size="14"
                    app:label_text_top_color="@color/txt_2"
                    app:label_top_padding="32"
                    android:layout_toRightOf="@+id/sales_avart"
                    android:drawableRight="@mipmap/icon_list_next"
                    android:paddingRight="10dp"

                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/sales_trends"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    app:label_left_padding="10"
                    app:label_TB_padding="1"
                    app:label_text_bottom_color="@color/txt_9"
                    app:label_text_bottom_size="12"
                    app:label_text_top_size="16"
                    app:label_text_top_color="@color/txt_2"
                    app:label_top_padding="25"
                    android:layout_toRightOf="@+id/sales_avart"
                    android:background="@color/white"
                    android:paddingRight="10dp"
                    app:label_text_top_str="业绩趋势"
                    app:label_text_bottom="2016-09-06-2016-09-13"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_sale_spinner"
                    android:layout_marginRight="10dp"

                    >
                    <Spinner
                        android:id="@+id/sales_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:dropDownWidth="match_parent"
                        >
                    </Spinner>
                </RelativeLayout>


            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="240dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <CheckedTextView
                    android:id="@+id/sale_legend_apply"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/selector_sale_legend_full_amount_color"
                    android:drawableLeft="@drawable/selector_sale_full_amount"
                    android:layout_marginRight="40dp"
                    android:text="@string/apply_count"
                    android:drawablePadding="5dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/transparent"
                    />

                <CheckedTextView
                    android:id="@+id/sale_legend_full"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/selector_sale_legend_apply_acount_color"
                    android:drawableLeft="@drawable/selector_sale_apply_acount"
                    android:textSize="10sp"
                    android:drawablePadding="5dp"
                    android:text="@string/full_amount"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/transparent"
                    />
            </FrameLayout>

