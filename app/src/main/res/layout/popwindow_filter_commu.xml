<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/commun_block_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_toolbar_height"
        android:background="@android:color/transparent" />

    <com.commonlib.widget.LabelTextView
        android:id="@+id/commun_state"
        style="@style/communication_textview"
        android:hint="@string/commun_state_hnit"
        app:draw_bottom_line="true"
        app:label_text_left="@string/commun_label_state" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commun_date_label"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/commun_date"
            android:textColor="@color/txt_2"
            android:textSize="@dimen/sp14" />

        <com.commonlib.widget.LabelTextView
            android:id="@+id/commun_date_start"
            style="@style/communication_textview"
            android:layout_toRightOf="@+id/commun_date_label"
            android:gravity="left|center"
            android:hint="@string/commun_date_start"
            android:paddingLeft="20dp"
            app:draw_bottom_line="true" />

        <com.commonlib.widget.LabelTextView
            android:id="@+id/commun_date_end"
            style="@style/communication_textview"
            android:layout_below="@+id/commun_date_start"
            android:layout_toRightOf="@+id/commun_date_label"
            android:gravity="left|center"
            android:hint="@string/commun_date_end"
            android:paddingLeft="20dp"
            app:draw_bottom_line="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/comm_line" />
    </RelativeLayout>


    <com.commonlib.widget.LabelTextView
        android:id="@+id/commun_refuse"
        style="@style/communication_textview"
        android:hint="@string/commun_refuse_hnit"
        app:draw_bottom_line="true"
        app:label_text_left="@string/commun_refuse" />

    <com.commonlib.widget.LabelTextView
        android:id="@+id/commun_confidence"
        style="@style/communication_textview"
        android:hint="@string/commun_confidence_hnit"
        app:draw_bottom_line="true"
        app:label_text_left="@string/commun_confidence" />

    <com.commonlib.widget.LabelTextView
        android:id="@+id/commun_order"
        style="@style/communication_textview"
        android:hint="@string/commun_order_hnit"
        app:label_text_left="@string/commun_order" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/comm_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commu_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/commun_rest"
            android:textColor="@color/txt_6"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/commu_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fda428"
            android:gravity="center"
            android:text="@string/commun_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <TextView
        android:id="@+id/commun_block_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:alpha="0.5"
        android:background="@android:color/black"></TextView>
</LinearLayout>