<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--顶部个人头像 姓名 布局-->
        <RelativeLayout
            android:id="@+id/fm_me_header_layout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/fragment_me_bg">

            <com.ishow.ischool.widget.custom.CircleImageView
                android:id="@+id/fm_me_header_avart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img_header_default" />

            <com.ishow.ischool.widget.custom.AvatarImageView
                android:id="@+id/fm_avart_txt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:text_color="@color/colorPrimary"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/fm_me_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/fm_me_header_avart"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/sp14"
                />

            <TextView
                android:id="@+id/fm_me_header_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/white"
                android:layout_below="@+id/fm_me_header_name"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"
                android:textSize="12sp" />
        </RelativeLayout>


        <!--app:draw_right_redPoint="false" 默认不绘制小圆点的-->
        <com.ishow.ischool.widget.custom.FmItemTextView
            android:id="@+id/fm_me_switch_role"
            style="@style/fragment_textview_Wmatch_45height"
            android:drawableLeft="@mipmap/icon_mine_switch"
            android:text="@string/fm_me_switch_role"
            app:tip_right_color="#999"
            app:draw_right_tip_txt="sddfsfsff"
            app:tip_right_padding="24"
            />


        <com.ishow.ischool.widget.custom.FmItemTextView
            android:id="@+id/fm_me_notify_msg"
            style="@style/fragment_textview_Wmatch_45height"
            android:drawableLeft="@mipmap/icon_mine_message"
            android:text="@string/fm_me_notify_msg"
            app:draw_right_redPoint="true"
            app:tip_right_color="@android:color/holo_red_light"
            app:tip_right_padding="24"
            android:visibility="gone"
            />


        <com.ishow.ischool.widget.custom.FmItemTextView
            android:id="@+id/fm_me_mornig_qrcode"
            style="@style/fragment_textview_Wmatch_45height"
            android:drawableLeft="@mipmap/icon_mine_code"
            android:text="@string/fm_me_mornig_qrcode"
            />


        <com.ishow.ischool.widget.custom.FmItemTextView
            android:id="@+id/fm_me_change_pwd"
            style="@style/fragment_textview_Wmatch_45height"
            android:drawableLeft="@mipmap/icon_mine_changepassword"
            android:text="@string/fm_me_change_pwd"
            />

        <com.ishow.ischool.widget.custom.FmItemTextView
            android:id="@+id/fm_me_kefu"
            style="@style/fragment_textview_Wmatch_45height"
            android:drawableLeft="@mipmap/icon_mine_service"
            android:text="@string/fm_me_kefu"
            />

        <com.ishow.ischool.widget.custom.FmItemTextView
            android:id="@+id/fm_me_version"
            style="@style/fragment_textview_Wmatch_45height"
            android:drawableLeft="@mipmap/icon_mine_switch"
            android:text="@string/fm_me_version"
            app:tip_right_color="#999"
            app:tip_right_padding="24"/>

        <Button
            android:id="@+id/fm_me_login_out"
            style="@style/fragment_textview_Wmatch_45height"
            android:text="@string/fm_me_login_out"
            android:textColor="@color/text_tuichu"
            android:gravity="center"
            android:drawableRight="@null"
            android:background="@drawable/bg_item_text_ripple" />
    </LinearLayout>
</ScrollView>