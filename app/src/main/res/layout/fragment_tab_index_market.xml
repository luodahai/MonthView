<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ishow.ischool.business.tabindex.TabIndexMarketFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_index_bg"
                android:orientation="vertical"
                android:paddingTop="75dp">

                <include layout="@layout/group_home_pre_pay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_entrance"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_entrance" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_apply"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_apply" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_full_pay"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_full_pay" />

                    <!--<com.commonlib.widget.LabelTextView-->
                    <!--android:id="@+id/student_refund"-->
                    <!--style="@style/home_count_group"-->
                    <!--android:text="190"-->
                    <!--app:label_text_top="@string/label_student_refund" />-->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/performance_market_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/performance_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_date_next"
                    android:text="@string/home_performance_progress"
                    android:textColor="@color/txt_3"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/performance_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/txt_9"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/up_progress_performance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/txt_9"
                        app:label_text_color="@color/txt_9"
                        app:label_text_left="@string/performance"
                        app:label_text_size="@dimen/sp13" />

                    <ProgressBar
                        android:id="@+id/up_progress_bar_performance"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progressbar_performance" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/up_progress_red_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="right"
                        android:textColor="@color/txt_9"
                        app:label_text_color="@color/txt_9"
                        app:label_text_left="@string/red_target"
                        app:label_text_size="@dimen/sp13" />

                    <ProgressBar
                        android:id="@+id/up_progress_bar_red_target"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progressbar_red_target" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/up_progress_rush_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="right"
                        android:textColor="@color/txt_9"
                        app:label_text_color="@color/txt_9"
                        app:label_text_left="@string/rush_target"
                        app:label_text_size="@dimen/sp13" />

                    <ProgressBar
                        android:id="@+id/up_progress_bar_rush_target"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progressbar_rush_target" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/process_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:padding="10dp">

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/process_full_money_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="28dp"
                    android:drawableRight="@mipmap/icon_date_next"
                    android:paddingBottom="20dp"
                    android:text="1%"
                    app:label_TB_padding="15"
                    app:label_text_bottom="全款率"
                    app:label_text_bottom_color="@color/txt_9"
                    app:label_text_bottom_size="12" />

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/process_title"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="20dp"
                    android:textColor="@color/txt_9"
                    android:textSize="@dimen/sp12"
                    app:label_text_top_str="@string/market_process"
                    app:label_top_padding="15" />

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/process_apply_rate"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@+id/process_full_money_rate"
                    android:layout_toStartOf="@+id/process_full_money_rate"
                    android:paddingBottom="20dp"
                    android:text="1%"
                    app:label_TB_padding="15"
                    app:label_text_bottom="@string/apply_rate"
                    app:label_text_bottom_color="@color/txt_9"
                    app:label_text_bottom_size="12" />

            </RelativeLayout>

            <com.ishow.ischool.widget.custom.PieChartView
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/white" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        android:id="@+id/market_title_bg"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FF2883f6" />

</RelativeLayout>