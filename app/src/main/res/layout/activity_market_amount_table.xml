<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/widget_toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="校区"
            android:textColor="@color/txt_3"
            android:textSize="@dimen/sp13" />

        <View
            android:id="@+id/horizontal_divider_line"
            style="@style/table_horizontal_divider_line"
            android:layout_below="@id/tv_name" />

        <View
            android:id="@+id/vertical_divider_line"
            style="@style/table_vertical_divider_line"
            android:layout_toRightOf="@id/tv_name" />

        <ListView
            android:id="@+id/lv_left"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/horizontal_divider_line"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:dividerHeight="1px"
            android:divider="@color/comm_line"/>

        <com.ishow.ischool.widget.table.HeadHorizontalScrollView
            android:id="@+id/sv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/vertical_divider_line"
            android:scrollbars="none">

            <com.ishow.ischool.widget.table.MyLinearLayout4ListView
                android:id="@+id/head_lv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/chart_head_gray_bg"/>
        </com.ishow.ischool.widget.table.HeadHorizontalScrollView>

        <com.ishow.ischool.widget.table.BodyHorizontalScrollView
            android:id="@+id/sv_detail"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_below="@id/horizontal_divider_line"
            android:layout_toRightOf="@id/vertical_divider_line"
            android:overScrollMode="never"
            android:scrollbars="none">

            <ListView
                android:id="@+id/lv_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:dividerHeight="1px"
                android:divider="@color/comm_line"/>
        </com.ishow.ischool.widget.table.BodyHorizontalScrollView>

    </RelativeLayout>

</RelativeLayout>