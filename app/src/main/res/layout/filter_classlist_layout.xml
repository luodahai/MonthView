<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:input="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/commun_block_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_toolbar_height"
        android:background="@android:color/transparent"/>
    <com.ishow.ischool.widget.custom.InputLinearLayout
        android:id="@+id/item_campus"
        style="@style/input_linearLayout_style"
        input:inputLayout_texthint="学员所在校区"
        input:label_text="@string/item_campus"
        input:next="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/time_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="开班日期"
            android:textColor="@color/txt_2"
            android:textSize="@dimen/sp14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="@string/item_start_time"
                    android:maxLines="1"
                    android:textColor="@color/txt_2"
                    android:textSize="@dimen/sp14"
                    android:textColorHint="@color/txt_hint"/>

                <ImageView
                    android:id="@+id/start_time_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/icon_list_delete"
                    android:visibility="gone"/>
            </LinearLayout>

            <include layout="@layout/view_bottom_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/end_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="@string/item_end_time"
                    android:maxLines="1"
                    android:textColor="@color/txt_2"
                    android:textSize="@dimen/sp14"
                    android:textColorHint="@color/txt_hint"/>

                <ImageView
                    android:id="@+id/end_time_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/icon_list_delete"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/comm_line" />

    <com.ishow.ischool.widget.custom.InputLinearLayout
        android:id="@+id/item_course_type"
        style="@style/input_linearLayout_style"
        input:inputLayout_texthint="请选择课程"
        input:label_text="课程"
        input:next="true" />

    <com.ishow.ischool.widget.custom.InputLinearLayout
        android:id="@+id/item_teacher"
        style="@style/input_linearLayout_style"
        input:inputLayout_texthint="请选择教师"
        input:label_text="教师"
        input:next="true" />

    <com.ishow.ischool.widget.custom.InputLinearLayout
        android:id="@+id/item_advisor"
        style="@style/input_linearLayout_style"
        input:inputLayout_texthint="请选择学习顾问"
        input:label_text="学习顾问"
        input:next="true"
        input:bottom_line="false"/>

    <include layout="@layout/view_bottom_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/filter_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/str_reset"
            android:textColor="@color/txt_6"
            android:textSize="@dimen/sp15"/>

        <TextView
            android:id="@+id/filter_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_orange"
            android:gravity="center"
            android:text="@string/str_ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15"/>
    </LinearLayout>

    <TextView
        android:id="@+id/commun_block_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:alpha="0.5" />
</LinearLayout>