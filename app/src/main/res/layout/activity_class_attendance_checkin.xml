<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="263dp"
    android:background="@drawable/bg_round_coner8"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_sign"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认签到"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/txt_2"/>


    <TextView
        android:id="@+id/check_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应到人数 : 2 实到人数：2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/txt_9"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/check_in"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_checkin_left"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1px" />

        <Button
            android:id="@+id/check_cancel"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:text="取消"
            android:textColor="@color/txt_6"
            android:background="@drawable/select_checkin_right"/>
    </LinearLayout>
</LinearLayout>