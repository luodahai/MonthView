<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ishow.ischool.business.tabindex.TabIndexMarketFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_index_bg"
                android:orientation="vertical"
                android:paddingTop="75dp">

                <include layout="@layout/group_home_pre_pay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_all"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_all" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_should"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_should" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_final"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_final" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/student_stop"
                        style="@style/home_count_group"
                        android:text="0"
                        app:label_text_top="@string/label_student_stop" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/performance_education_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/up_progress_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_date_next"
                    android:text="@string/home_up_progress"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/txt_3"/>

                <TextView
                    android:id="@+id/up_progress_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/up_grogress_rate_to_today"
                    android:textColor="@color/txt_9"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp">

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/up_progress_performance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0%"
                        android:textColor="@color/txt_9"
                        app:label_text_size="@dimen/sp13"
                        app:label_text_color="@color/txt_9"
                        app:label_text_left="@string/performance" />

                    <ProgressBar
                        android:id="@+id/up_progress_bar_performance"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progressbar_performance" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/up_progress_red_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="right"
                        android:text="0%"
                        android:textColor="@color/txt_9"
                        app:label_text_size="@dimen/sp13"
                        app:label_text_color="@color/txt_9"
                        app:label_text_left="@string/red_target" />

                    <ProgressBar
                        android:id="@+id/up_progress_bar_red_target"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progressbar_red_target" />

                    <com.commonlib.widget.LabelTextView
                        android:id="@+id/up_progress_rush_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="right"
                        android:text="0%"
                        android:textColor="@color/txt_9"
                        app:label_text_size="@dimen/sp13"
                        app:label_text_color="@color/txt_9"
                        app:label_text_left="@string/rush_target" />

                    <ProgressBar
                        android:id="@+id/up_progress_bar_rush_target"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progressbar_rush_target" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/process_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/full_pay_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="28dp"
                    android:drawableRight="@mipmap/icon_date_next"
                    android:paddingBottom="20dp"
                    android:text="97%"
                    app:label_TB_padding="15"
                    app:label_text_bottom="@string/full_pay_rate"
                    app:label_text_bottom_color="@color/txt_9"
                    app:label_text_bottom_size="12" />

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/process_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="20dp"
                    android:textColor="@color/txt_9"
                    android:textSize="@dimen/sp12"
                    app:label_text_top_str="集团教学流程"
                    app:label_top_padding="15" />

                <com.commonlib.widget.TopBottomTextView
                    android:id="@+id/upgrade_rate"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@+id/full_pay_rate"
                    android:layout_toStartOf="@+id/full_pay_rate"
                    android:paddingBottom="20dp"
                    android:text="97%"
                    app:label_TB_padding="15"
                    app:label_text_bottom="@string/upgrade_rate"
                    app:label_text_bottom_color="@color/txt_9"
                    app:label_text_bottom_size="12" />

            </RelativeLayout>

            <com.ishow.ischool.widget.custom.PieChartView
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/white" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        android:id="@+id/teach_title_bg"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FF2883f6" />
</RelativeLayout>