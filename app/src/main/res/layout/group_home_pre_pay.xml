<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pre_pay_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/home_circle_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/icon_home_circle" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/label_index_advances_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/advances_received"
            android:textColor="#99FFFFFF" />

        <com.ishow.ischool.widget.custom.RiseNumTextView
            android:id="@+id/home_advances_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_index_advances_received"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="47sp" />

        <TextView
            android:id="@+id/index_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_advances_received"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/label_refund"
            android:textColor="#99FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/index_refund"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/index_refund_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_home_refond_number"
                android:drawablePadding="4dp"
                android:text="0人"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/index_refund_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/icon_home_refond_money"
                android:drawablePadding="4dp"
                android:text="0元"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>