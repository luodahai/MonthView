<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
<include layout="@layout/widget_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/bg_round_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qrcode_name"
            style="@style/fragment_textview_Wwrap_Hwrap"
            android:layout_marginTop="40dp"
            android:textColor="@color/txt_2" />

        <ImageView
            android:id="@+id/qrcode_code"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
             />

        <TextView
            style="@style/fragment_textview_Wwrap_Hwrap"
            android:layout_below="@+id/qrcode_code"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="扫我啊"
            android:textColor="#999999" />
    </LinearLayout>

    <com.ishow.ischool.widget.custom.CircleImageView
        android:id="@+id/qrcode_avart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
         />

</FrameLayout>